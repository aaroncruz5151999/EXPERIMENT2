#include <iostream>

using namespace std;

int main()
{
    int x, n, sum;
    
    cout << "Please type a number: ";
    cin >> n;
    
    while (n>0)
    {
        for (sum=0, x=1; x<=n; x++)
        sum+=x;
        
        cout << "The sum of all whole numbers from 1 to " << n << " is " << sum << "." << endl;
        cout << "Please type a number: ";
        cin >> n;
    }
    
    cout << "Thank You!";
    cout << endl;
    
return 0;
}
